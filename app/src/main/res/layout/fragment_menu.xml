<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstrainsLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="Seleccione una Opcion para administrar Clientes:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_ListarClientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_ListarClientes"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:text="Listar Clientes"
        android:background="@drawable/boton_redondeado_menu"
        app:layout_constraintBottom_toTopOf="@+id/button_AgregarCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button_AgregarCliente"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondeado_menu"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:text="Agregar Cliente"
        app:layout_constraintBottom_toTopOf="@+id/button_EditarCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ListarClientes" />

    <Button
        android:id="@+id/button_EditarCliente"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/boton_redondeado_menu"
        android:text="Editar Cliente"
        app:layout_constraintBottom_toTopOf="@+id/button_EliminarCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_AgregarCliente" />

    <Button
        android:id="@+id/button_EliminarCliente"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:padding="5dp"

        android:background="@drawable/boton_redondeado_menu"
        android:text="Eliminar Cliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_EditarCliente" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>